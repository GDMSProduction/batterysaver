<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <ImageView
        android:id="@+id/clock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_centerVertical="true"
        android:background="#4d4db132"
        app:srcCompat="@drawable/zzzz" />

    <TextView
        android:id="@+id/Mytitle"
        android:layout_width="287dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="97dp"
        android:fontFamily="@font/damion"
        android:lines="1"
        android:maxLines="1"
        android:paddingTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:text="Google" />

    <ImageView
        android:id="@+id/Myicon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:paddingEnd="16dp"
        android:paddingStart="8dp"
        tools:src="@mipmap/ic_launcher" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="108dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />


    <NumberPicker
        android:id="@+id/editNumber"
        android:layout_width="82dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/Myicon"
        android:addStatesFromChildren="false"
        android:ems="10"
        android:fadeScrollbars="false"
        android:inputType="textPersonName"
        android:isScrollContainer="false"
        android:scaleX="2.75"
        android:scaleY="2.75"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/checked"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/white"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/zzzz" />

    <TextView
        android:id="@+id/realnumber"
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/kavivanar"
        android:text="15"
        android:textColor="#000000"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/zzzz" />


</RelativeLayout>
